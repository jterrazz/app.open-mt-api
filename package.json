{
    "name": "openmt-api",
    "version": "1.0.0",
    "engines": {
        "node": "16.x"
    },
    "author": "Jean-Baptiste TERRAZZONI",
    "license": "MIT",
    "scripts": {
        "start": "node -r tsconfig-paths/register -r ts-node/register/transpile-only src/start-app.ts",
        "start:worker": "node -r tsconfig-paths/register -r ts-node/register/transpile-only src/start-worker.ts",
        "dev": "nodemon --exec \"yarn start\"",
        "dev:worker": "nodemon --exec \"yarn start:worker\"",
        "test": "jest --silent",
        "test:debug": "jest --runInBand --detectOpenHandles",
        "test:coverage": "jest --coverage",
        "docker:dev": "docker compose -f compose/docker-compose.dev.yml up --exit-code-from dev-api",
        "docker:test": "docker compose -f compose/docker-compose.test.yml up postgres tests --exit-code-from tests",
        "docker:up": "docker compose -f compose/docker-compose.test.yml up -d postgres migration",
        "docker:down": "docker compose -f compose/docker-compose.test.yml down",
        "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
        "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx .",
        "db:migrate": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myopenmarket npx prisma migrate dev --name",
        "db:deploy": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myopenmarket npx prisma migrate deploy",
        "db:deploy-prod": "npx prisma migrate deploy",
        "db:revert": "#todo",
        "db:studio": "DATABASE_URL=postgresql://postgres:postgres@localhost:5432/myopenmarket npx prisma studio"
    },
    "devDependencies": {
        "@shopify/jest-koa-mocks": "^3.1.5",
        "@types/config": "^0.0.41",
        "@types/jest": "^27.0.2",
        "@types/koa": "^2.13.4",
        "@types/koa-bodyparser": "^4.3.7",
        "@types/koa-passport": "^4.0.3",
        "@types/koa-router": "^7.4.4",
        "@types/koa-session": "^5.10.6",
        "@types/lodash": "^4.14.182",
        "@types/node": "^17.0.30",
        "@types/passport": "^1.0.7",
        "@types/passport-local": "^1.0.34",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.21.0",
        "@typescript-eslint/parser": "^5.21.0",
        "eslint": "^8.14.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
        "eslint-plugin-sort-keys-fix": "^1.1.2",
        "jest": "^27",
        "nodemon": "^2.0.16",
        "pgtools": "^0.3.2",
        "prettier": "^2.6.1",
        "prisma": "^3.13.0",
        "supertest": "^6.2.3",
        "ts-jest": "^27.1.4"
    },
    "dependencies": {
        "@prisma/client": "^3.13.0",
        "bcrypt": "^5.0.1",
        "config": "^3.3.6",
        "http-status-codes": "^2.1.4",
        "js-yaml": "^4.1.0",
        "koa": "^2.13.4",
        "koa-bodyparser": "^4.3.0",
        "koa-passport": "^4.1.4",
        "koa-router": "^10.1.1",
        "koa-session": "^6.2.0",
        "lodash": "^4.17.21",
        "mixpanel": "^0.14.0",
        "passport": "^0.5.2",
        "passport-local": "^1.0.0",
        "ts-node": "^10.7.0",
        "tsconfig-paths": "^3.14.1",
        "typescript": "^4.6.4",
        "winston": "^3.3.3",
        "zod": "^3.14.3"
    }
}
